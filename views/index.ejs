<!DOCTYPE html>
<html>
  <head>
    <title>List Class</title>
    <link rel='stylesheet' href />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'
      rel='stylesheet'>
  </head>
  <style>
  /* Center the heading */
h1 {
  text-align: center;
  margin-top: 20px;
}

/* Style the add student button */
a button {
  display: block;
  margin: 10px auto;
  background-color: #4CAF50;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
}

a button:hover {
  background-color: #45a049;
}

/* Style the table */
table {
  width: 100%;
  border-collapse: collapse;
  font-size: 16px;
}

th, td {
  padding: 10px;
  text-align: center; /* Center the data */
  border-bottom: 1px solid #ddd;
}

th {
  background-color: #f2f2f2;
}

/* Style the update and delete buttons */
td a button {
  background-color: #4CAF50;
  color: white;
  padding: 5px 5px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  margin-right: 5px;
}

td a button:hover {
  background-color: #45a049;
}

td a button.delete {
  background-color: #f44336;
}

td a button.delete:hover {
  background-color: #da190b;
}
a {
  text-decoration: none;
}
.action {
  display: flex;
  justify-content: center;
  align-items: center;
}
.delete {
  color: red;
  font-size: 20px;
}
.edit {
  color: blue;
  font-size: 20px;
}
.action button {
  background-color: transparent !important;
}
  </style>
  <body>
    <h1>Danh sách sinh viên</h1>
    <a href="/add"><button>Thêm sinh viên</button></a>
    <table>
      <tr>
        <th>Tên</th>
        <th>Giới tính</th>
        <th>Tuổi</th>
        <th>Điểm Toán</th>
        <th>Điểm Lý</th>
        <th>Điểm Hóa</th>
        <th>Action</th>
      </tr>
      <% students.forEach(item => { %>
      <tr>
        <td><%= item.name %> </td>
        <td><%= item.gender %> </td>
        <td><%= item.age %></td>
        <td><%= item.mathScore %></td>
        <td><%= item.physicsScore %></td>
        <td><%= item.chemistryScore %></td>
        <td class="action">
          <a href="/update/<%= item.id %>"><button><i
                class='bx bxs-edit edit'></i></button></a>
          <a href="/delete/<%= item.id %>"><button><i
                class='bx bxs-trash-alt delete'></i></button></a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
